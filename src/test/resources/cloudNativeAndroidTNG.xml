<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Native mobile testing Suite">
  <parameter name="appType" value="native"/>
  <parameter name="deviceName" value="GOOGLE Pixel 2"/>
  <parameter name="platformName" value="Android"/>
  <parameter name="app" value="./src/main/resources/EPAMTestApp.apk"/>
  <parameter name="isCloud" value="true"/>
  <test name="Native tests">
    <groups>
      <run>
