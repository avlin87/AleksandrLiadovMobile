<configuration>

  <appender name="CONSOLE_LOG" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{54} &lt;%M&gt; - %msg%n</Pattern>
    </encoder>
  </appender>

  <logger name="com.epam.mtat" level="info" additivity="false">
    <appender-ref ref="CONSOLE_LOG"/>
  </logger>


</configuration>